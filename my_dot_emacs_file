;; company-mode
(semantic-mode 1)
(add-hook 'after-init-hook 'global-company-mode)

;; c/c++ style
(add-hook 'c-mode-common-hook (lambda() (c-set-style "bsd")))
(add-hook 'c++-mode-common-hook (lambda() (c-set-style "bsd")))

;; close auto backup
(setq make-backup-files nil)

;; parenthesis
(show-paren-mode t)
(electric-pair-mode t)
(defadvice show-paren-function
    (after show-matching-paren-offscreen activate)
  (interactive)
  (let* ((cb (char-before (point)))
	 (matching-text (and cb
			     (char-equal (char-syntax cb) ?\) )
			     (blink-matching-open))))
    (when matching-text (message matching-text))))
;; note: I copy the function above from the emacs wiki, and it cause a little trouble in use.
;; I don't know elisp. So if someone can figure out what's happeing up there, please let me know.
